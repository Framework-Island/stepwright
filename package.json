{
    "name": "stepwright",
    "version": "1.0.0",
    "description": "A powerful web scraping library built with Playwright",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "README.md"
    ],
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "clean": "rimraf dist",
        "prebuild": "npm run clean",
        "test": "vitest",
        "test:watch": "vitest --watch",
        "test:coverage": "vitest --coverage",
        "lint": "eslint src/**/*.ts",
        "format": "prettier --write src/**/*.ts",
        "prepare": "npm run build"
    },
    "keywords": [
        "web-scraping",
        "playwright",
        "automation",
        "browser-automation",
        "data-extraction"
    ],
    "author": "Muhammad Umer Farooq <umer@lablnet.com>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/lablnet/stepwright.git"
    },
    "bugs": {
        "url": "https://github.com/lablnet/stepwright/issues"
    },
    "homepage": "https://github.com/lablnet/stepwright#readme",
    "dependencies": {
        "playwright": "^1.54.1"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "@vitest/coverage-v8": "^1.0.0",
        "eslint": "^8.0.0",
        "prettier": "^3.0.0",
        "rimraf": "^5.0.0",
        "typescript": "^5.0.0",
        "vitest": "^1.0.0"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "peerDependencies": {
        "playwright": "^1.54.1"
    }
}